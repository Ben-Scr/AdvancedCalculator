<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Dark Theme -->
	<Color x:Key="Surface">#272537</Color>
	<Color x:Key="SurfaceAlt">#2f2c41</Color>
	<Color x:Key="Accent">#6C63FF</Color>
	<Color x:Key="AccentAlt">#8B84FF</Color>
	<Color x:Key="OnSurface">#FFFFFF</Color>
	<Color x:Key="OnSurfaceDim">#CFCFCF</Color>
	<SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Surface}"/>
	<SolidColorBrush x:Key="Brush.SurfaceAlt" Color="{StaticResource SurfaceAlt}"/>
	<SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Accent}"/>
	<SolidColorBrush x:Key="Brush.AccentAlt" Color="{StaticResource AccentAlt}"/>
	<SolidColorBrush x:Key="Brush.OnSurface" Color="{StaticResource OnSurface}"/>
	<SolidColorBrush x:Key="Brush.OnSurfaceDim" Color="{StaticResource OnSurfaceDim}"/>
</ResourceDictionary>
