<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style TargetType="Button" x:Key="CalcButton">
		<Setter Property="Margin" Value="6"/>
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Background" Value="#2F2C41"/>
		<Setter Property="BorderBrush" Value="#3A3842"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border CornerRadius="10"
							Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="#3a3750"/>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter Property="Background" Value="#34324a"/>
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Opacity" Value="0.6"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="Button" x:Key="AccentButton" BasedOn="{StaticResource CalcButton}">
		<Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Brush.AccentAlt}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Height" Value="48"/>
	</Style>

	<Style TargetType="TextBox" x:Key="DisplayBox">
		<Setter Property="FontSize" Value="30"/>
		<Setter Property="Foreground" Value="{StaticResource Brush.OnSurface}"/>
		<Setter Property="Background" Value="#1F1D29"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="12"/>
		<Setter Property="HorizontalContentAlignment" Value="Right"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Height" Value="64"/>
	</Style>
</ResourceDictionary>
