<UserControl x:Class="AdvancedCalculator.Views.Pages.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:AdvancedCalculator.Core">
    <UserControl.Resources>
        <!-- Display-Style -->
        <Style TargetType="TextBox" x:Key="DisplayBox">
            <Setter Property="core:CaretIndexBinding.Enable" Value="True" />
            <!-- 2) TwoWay-Binding für den Index -->
            <Setter Property="core:CaretIndexBinding.CaretIndex"
                Value="{Binding CursorIndex, Mode=TwoWay}" />
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1F1D29"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="64"/>
        </Style>

        <!-- Basis-Button -->
        <Style TargetType="Button" x:Key="CalcButton">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2F2C41"/>
            <Setter Property="BorderBrush" Value="#3A3842"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a3750"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#34324a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accented via Trigger im DataTemplate -->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Style="{StaticResource DisplayBox}"
                 Text="{Binding Display, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Keys}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Label}"
                            Command="{Binding Command}"
                            CommandParameter="{Binding CommandParameter}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CalcButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAccent}" Value="True">
                                        <Setter Property="Background" Value="#6C63FF"/>
                                        <Setter Property="BorderBrush" Value="#8B84FF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
