<UserControl x:Class="AdvancedCalculator.Views.Pages.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:AdvancedCalculator.Core">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource DisplayBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Right"
                           Foreground="{StaticResource Foreground.Secondary}"
                           FontSize="18"
                           Text="{Binding ExpressionPreview}"/>

                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Foreground="{StaticResource Foreground.Emphasis}"
                           FontSize="44"
                           FontWeight="SemiBold"
                           Text="{Binding Display}"/>
            </Grid>
        </Border>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Keys}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Label}"
                            Command="{Binding Command}"
                            CommandParameter="{Binding CommandParameter}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource DefaultButton}">

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAccent}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryButton.Default}"/>
                                        <Setter Property="Foreground" Value="{StaticResource Foreground.Primary}"/>
                                    </DataTrigger>

                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAccent}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource PrimaryButton.Hover}"/>
                                    </MultiDataTrigger>

                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAccent}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsPressed}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource PrimaryButton.Pressed}"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>

                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
